# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

GET           /todo/list                 controllers.TodoController.getAll
GET           /todo/$id<[0-9]+>          controllers.TodoController.get(id: Long)
POST          /todo                      controllers.TodoController.create
PUT           /todo                      controllers.TodoController.update
DELETE        /todo/$id<[0-9+]+>         controllers.TodoController.delete(id: Long)
GET           /todo-category/list        controllers.TodoCategoryController.getAll()
